# Database Configuration
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/pawnbroker-pro?retryWrites=true&w=majority

# Server Configuration
PORT=5001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# eBay API Configuration
EBAY_APP_ID=your-ebay-app-id
EBAY_CERT_ID=your-ebay-cert-id
EBAY_CLIENT_SECRET=your-ebay-client-secret

# Amazon API Configuration
AMAZON_ACCESS_KEY_ID=your-amazon-access-key-id
AMAZON_SECRET_ACCESS_KEY=your-amazon-secret-access-key
AMAZON_REGION=us-east-1
AMAZON_ASSOCIATE_TAG=your-associate-tag

# Amazon App Store API Configuration
AMAZON_CLIENT_ID=your-amazon-client-id
AMAZON_CLIENT_SECRET=your-amazon-client-secret
AMAZON_SECURITY_PROFILE_ID=your-security-profile-id
AMAZON_API_KEY=your-amazon-api-key

# Canopy API Configuration
CANOPY_API_KEY=your-canopy-api-key

# Keepa API Configuration
KEEPA_API_KEY=your-keepa-api-key

# Google Cloud Vision Configuration
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
GOOGLE_CLOUD_PRIVATE_KEY=your-google-cloud-private-key
GOOGLE_CLOUD_CLIENT_EMAIL=your-google-cloud-client-email

# Firebase Configuration
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=300
CACHE_CHECK_PERIOD=600

# Security
CORS_ORIGIN=http://localhost:3000
SECURE_COOKIES=false
