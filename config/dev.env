# Development Environment Configuration
# IMPORTANT: Replace placeholder values with actual development credentials

# Server Configuration
NODE_ENV=development
PORT=5001

# Database Configuration
MONGODB_URI=mongodb+srv://[DEV_USERNAME]:[DEV_PASSWORD]@[DEV_CLUSTER].mongodb.net/pawnbroker-pro-dev?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=[DEV_JWT_SECRET_HERE]

# CORS Configuration
CORS_ORIGIN=http://localhost:19006,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Firebase Configuration (for authentication and image storage)
FIREBASE_PROJECT_ID=pawnbroker-pro-dev
FIREBASE_PRIVATE_KEY=[DEV_FIREBASE_PRIVATE_KEY]
FIREBASE_CLIENT_EMAIL=[DEV_FIREBASE_CLIENT_EMAIL]
FIREBASE_STORAGE_BUCKET=pawnbroker-pro-dev.appspot.com

# Google Cloud Vision Configuration
GOOGLE_APPLICATION_CREDENTIALS=config/google-service-account-dev.json
GOOGLE_CLOUD_PROJECT_ID=pawnbroker-pro-dev

# Keepa API Configuration
KEEPA_API_KEY=[DEV_KEEPA_API_KEY]

# Amazon Product Advertising API Configuration
AMAZON_ASSOCIATE_TAG=streamautocli-20
AMAZON_ACCESS_KEY_ID=[DEV_AMAZON_ACCESS_KEY_ID]
AMAZON_SECRET_ACCESS_KEY=[DEV_AMAZON_SECRET_ACCESS_KEY]
AMAZON_REGION=us-east-1

# Canopy API Configuration
CANOPY_API_KEY=[DEV_CANOPY_API_KEY]

# eBay API Configuration
EBAY_APP_ID=[DEV_EBAY_APP_ID]

# Webhook Security
WEBHOOK_VERIFICATION_TOKEN=[DEV_WEBHOOK_TOKEN]
