{
  "expo": {
    "name": "PawnBroker Pro",
    "slug": "pawnbroker-pro-android",
    "version": "1.0.0",
    "orientation": "portrait",
    // "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
          "splash": {
        // "image": "./assets/splash.png",
        "resizeMode": "contain",
        "backgroundColor": "#1a1a2e"
      },
    "assetBundlePatterns": [
      "**/*"
    ],
    "android": {
      "adaptiveIcon": {
        // "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "package": "com.pawnbrokerpro.android",
      "googleMobileAdsAppId": "ca-app-pub-7869206132163225~6227378217",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "versionCode": 1
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow PawnBroker Pro to access your camera to identify items."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow PawnBroker Pro to access your photo library to select item images."
        }
      ]
    ]
  }
}
